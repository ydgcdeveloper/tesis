{# El siguiente formulario pertenece a la entidad Menssajes #}
{% include 'default/index.html.twig' %}


    {% block nuevo %}
        <div class="container">
            <h2>Perfil de {{ user.name }}</h2>

            <br/>
            <div class="row">
                <li>
                    <a href="">{{ user.name }}</a>
                    <a href="">{{ user.role }}</a>
                    <a href="">{{ user.email }}</a>
                    <a href={{ path('send_messaje', {"id":user.id}) }}>{{ user.messajes }}</a>

                </li>
            </div>
            <div class="form-control">
                {#
                {% include 'AppBundle:User:send_mej.html.twig' %}
                #}
            </div>
        </div>
    {% endblock %}
    {% block denuevo %}
<form action="" method="post">
    <div class="form-group">
        {{ form_label(form_mej.destinatario, 'Destinatario:') }}{# Aqui se le pasa la variable del controlador #}
        {{ form_widget(form_mej.destinatario, {'attr': {'class':'form-control'} }) }}
    </div>
    <div class="form-group">
        {{ form_label(form_mej.menj, 'Mensaje:') }}
        {{ form_widget(form_mej.menj, {"attr":{'class':'form-control'} }) }}
    </div>

    {{ form_rest(form_mej) }}
        <input id="enviar" type="submit" class="form-submit btn btn-success" value="Enviar"/>
</form>
{% endblock %}